<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/newbasedb</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
       <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.show_sql">true</property>
        
        <mapping class="com.me.myapp.pojo.Organization"/>
        <mapping class="com.me.myapp.pojo.Admin"/>
        <mapping class="com.me.myapp.pojo.Employee"/>
        <mapping class="com.me.myapp.pojo.Role"/>
        <mapping class="com.me.myapp.pojo.Person"/>
        <mapping class="com.me.myapp.pojo.Email"/>
        <mapping class="com.me.myapp.pojo.Address"/>
        <mapping class="com.me.myapp.pojo.UserAccount"/>
        <mapping class="com.me.myapp.pojo.AdminUserAccount"/>
        <mapping class="com.me.myapp.pojo.EmployeeUserAccount"/>
        <mapping class="com.me.myapp.pojo.KnowledgeChapter"/>
        <mapping class="com.me.myapp.pojo.FileUpload"/>
        <mapping class="com.me.myapp.pojo.Announcement"/>
        <mapping class="com.me.myapp.pojo.Contact"/>
        <mapping class="com.me.myapp.pojo.OrgImage"/>
        
        
    </session-factory>
</hibernate-configuration>
